<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    app:cardCornerRadius="10dp"
    app:cardElevation="5dp"
    android:background="#ECC7A3">

    <com.smarteist.autoimageslider.SliderView
        android:id="@+id/imgSlider"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@drawable/bgpramuka"
        android:backgroundTintMode="screen"
        android:backgroundTint="@color/coklat"
        app:sliderAnimationDuration="600"
        android:scaleType="fitXY"
        app:sliderAutoCycleEnabled="true"
        app:sliderIndicatorAnimationDuration="600"
        app:sliderIndicatorGravity="center|bottom"
        app:sliderIndicatorMargin="5dp"
        app:sliderIndicatorOrientation="horizontal"
        app:sliderIndicatorPadding="1dp"
        app:sliderIndicatorRadius="1dp"
        app:sliderIndicatorRtlMode="auto"
        app:sliderIndicatorSelectedColor="#FFF"
        app:sliderIndicatorUnselectedColor="#5A5A5A"
        app:sliderScrollTimeInSec="1"
        app:sliderStartAutoCycle="true"
        card_view:ignore="MissingClass" />

</androidx.cardview.widget.CardView>